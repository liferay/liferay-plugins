<div class="$nav_css_class" id="navigation">
	#if ($is_profile_page)
		<div class="avatar" id="${themeId}taglibLogoSelector" style="background-image: url($current_user.getPortraitURL($themeDisplay))">
			<div id="${themeId}taglibLogoSelectorContent">
				<img alt="$current_user.getFullName()" id="${themeId}avatar" src="$current_user_profile_portrait_url">
			</div>

			#if ($show_edit_profile_button)
				<span class="aui-button edit-portrait" id="${themeId}editPortraitButton">
					<button class="aui-button-content">
						<span class="aui-buttonitem-label">$languageUtil.get($locale, "edit-profile-picture")</span>
					</button>
				</span>
			#end
		</div>
	#end

	<h1>
		<span>#language("navigation")</span>
	</h1>

	<ul>
		#foreach ($navItem in $navItems)
			#if ($layout.getPlid() == $navItem.layout.getPlid())
				<li class="selected">
			#else
				<li>
			#end

				<a href="$navItem.getURL()" $navItem.getTarget()><span>$navItem.icon() $navItem.getName()</span></a>

				#if ($navItem.hasChildren())
					<ul class="child-menu">
						#foreach ($nav_child in $navItem.getChildren())
							#if ($nav_child.isSelected())
								<li class="selected">
							#else
								<li>
							#end
								<a href="$nav_child.getURL()" $nav_child.getTarget()>$nav_child.getName()</a>
							</li>
						#end
					</ul>
				#end
			</li>
		#end
	</ul>
</div>