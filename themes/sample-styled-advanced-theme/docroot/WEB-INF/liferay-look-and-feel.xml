<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.0.0+</version>
	</compatibility>
	<theme id="sample-styled-advanced" name="Sample Styled Advanced">
		<root-path>/</root-path>
		<templates-path>${root-path}/templates</templates-path>
		<images-path>${root-path}/images</images-path>
		<template-extension>vm</template-extension>
		<settings>
			<setting configurable="true" key="bullet-style" options="dots,arrows" type="select" value="dots" />
		</settings>
		<roles>
			<role-name>User</role-name>
		</roles>
		<color-scheme id="01" name="Blue">
			<default-cs>true</default-cs>
			<css-class>blue</css-class>
		</color-scheme>
		<color-scheme id="02" name="Green">
			<css-class>green</css-class>
		</color-scheme>
		<layout-templates>
			<standard>
				<layout-template id="max">
					<template-path>/layouttpl/standard/max.tpl</template-path>
					<thumbnail-path>/layouttpl/standard/max.png</thumbnail-path>
				</layout-template>
			</standard>
			<custom>
				<layout-template id="custom" name="Custom">
					<template-path>/layouttpl/custom/custom.tpl</template-path>
					<thumbnail-path>/layouttpl/custom/custom.png</thumbnail-path>
				</layout-template>
			</custom>
		</layout-templates>
	</theme>
</look-and-feel>