<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.1.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_6_1_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.1.0+</version>
	</compatibility>
	<theme id="modern-indigo" name="Modern Indigo">
		<settings>
			<setting configurable="true" key="portlet-setup-show-borders-default" type="checkbox" value="false" />
			<setting configurable="false" key="show-site-name-default" value="false" />
			<setting configurable="false" key="show-site-name-supported" value="true" />
		</settings>
		<layout-templates>
			<custom>
				<layout-template id="2_1_2_columns" name="2-1-2 Columns Layout">
					<template-path>/layouttpl/custom/2-1-2-columns-layouttpl/2_1_2_columns.tpl</template-path>
					<wap-template-path>/layouttpl/custom/2-1-2-columns-layouttpl/2_1_2_columns.tpl</wap-template-path>
					<thumbnail-path>/layouttpl/custom/2-1-2-columns-layouttpl/2_1_2_columns.png</thumbnail-path>
				</layout-template>
			</custom>
		</layout-templates>
	</theme>
</look-and-feel>