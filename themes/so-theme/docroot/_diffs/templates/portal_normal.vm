<!DOCTYPE html>

#parse ($init)

<html class="#language("lang.dir")" dir="#language("lang.dir")" lang="$w3c_language_id">

<head>
	<title>$the_title - $company_name</title>

	$theme.include($top_head_include)
</head>

<body class="$css_class">

$theme.include($body_top_include)

#if ($is_signed_in)
	#dockbar()
#end

<div id="wrapper">
	<a href="#main-content" id="skip-to-content">#language("skip-to-content")</a>

	<header id="banner" role="banner">
		<hgroup id="heading">
			<div class="company-title">
				<a class="$logo" href="$current_user_dashboard_url" title="#language("go-to") $company_name">
					<span>$company_name</span>
				</a>
			</div>

			#if (!$page_group.isUser())
				<div class="community-title">
					<a href="$logo_url" title="#language("go-to") $community_name">
						<span>$community_name</span>
					</a>
				</div>
			#end

			<h3 class="page-title">
				<span>$the_title</span>
			</h3>

			#if ($is_signed_in)
				<div id="page-search">
					$theme.search()
				</div>
			#end
		</hgroup>

		#if (!$is_signed_in)
			<a href="$sign_in_url" id="sign-in" rel="nofollow">$sign_in_text</a>
		#end

		#if ($is_signed_in)
			<a href="javascript:;" id="toggleFluid"><span>$languageUtil.format($locale, "toggle-fluid-layout")</span></a>
		#end
	</header>

	<div id="content">
		<div id="so-sidebar">
			#if ($page_group.isUser())
				<div class="$user_detail_class">
					<div class="profile-image">
						<a href="$current_user_profile_url"><img src="$current_user_profile_portrait_url" alt="$current_user_name"></a>
					</div>

					#if ($page_group.isUser() && !$layout.isPublicLayout())
						<a class="profile-name" href="$current_user_profile_url">$current_user_name</a>
					#end
				</div>
			#end

			#if ($has_navigation)
				#parse ("$full_templates_path/navigation.vm")
			#end

			#if ($page_group.isUser())
				#parse ("$full_templates_path/sidebar_portlets.vm")
			#end
		</div>

		<div id="so-context">
			#if ($selectable)
				$theme.include($content_include)
			#else
				$portletDisplay.recycle()

				$portletDisplay.setTitle($the_title)

				$theme.wrapPortlet("portlet.vm", $content_include)
			#end
		</div>
	</div>

	<footer id="footer" role="contentinfo">
		<p class="powered-by">
			#language("powered-by") <a href="http://www.liferay.com" rel="external">Liferay</a>
		</p>
	</footer>
</div>

$theme.include($body_bottom_include)

</body>

$theme.include($bottom_include)

</html>