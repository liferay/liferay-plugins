	"http://www.liferay.com/dtd/liferay-hook_6_2_0.dtd">
<hook>
	<portal-properties>portal.properties</portal-properties>
	<custom-jsp-dir>/META-INF/custom_jsps</custom-jsp-dir>
	<struts-action>
		<struts-action-path>/portal/oauth/request_token</struts-action-path>
		<struts-action-impl>com.liferay.portal.oauth.action.OAuthRequestTokenAction</struts-action-impl>
	</struts-action>
	<struts-action>
		<struts-action-path>/portal/oauth/authorize</struts-action-path>
		<struts-action-impl>com.liferay.portal.oauth.action.OAuthAuthorizeAction</struts-action-impl>
	</struts-action>
	<struts-action>
		<struts-action-path>/portal/oauth/access_token</struts-action-path>
		<struts-action-impl>com.liferay.portal.oauth.action.OAuthAccessTokenAction</struts-action-impl>
	</struts-action>
</hook>