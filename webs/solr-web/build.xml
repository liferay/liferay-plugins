<?xml version="1.0"?>
<!DOCTYPE project>

<project name="solr-web" basedir="." default="deploy">
	<import file="../build-common-web.xml" />

	<property name="original.war.file" value="apache-solr-3.5.0.zip" />

	<target name="merge-unzip">
		<unzip
			dest="tmp/WEB-INF/lib"
			src="${original.war.file}"
		>
			<patternset
				includes="lucene-core.jar,apache-solr-3.5.0/dist/apache-solr-core-*.jar,apache-solr-3.5.0/dist/apache-solr-solrj-*.jar"
			/>
			<mapper type="flatten" />
		</unzip>
	</target>

	<target name="shrink-zip">
		<antcall target="shrink-zip-cmd">
			<param name="zip.file.name" value="${original.war.file}" />
			<param name="zip.includes" value="lucene-core.jar,apache-solr-3.5.0/dist/apache-solr-core-*.jar,apache-solr-3.5.0/dist/apache-solr-solrj-*.jar" />
		</antcall>
	</target>
</project>
