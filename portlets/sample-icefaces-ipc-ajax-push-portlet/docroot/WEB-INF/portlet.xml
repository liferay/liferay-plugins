<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>sample_icefaces_ipc_customers_portlet</portlet-name>
		<display-name>Sample ICEfaces IPC - Customers</display-name>
		<portlet-class>com.icesoft.faces.webapp.http.portlet.MainPortlet</portlet-class>
		<init-param>
			<name>com.icesoft.faces.VIEW</name>
			<value>/xhtml/customerList.iface</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Sample ICEfaces IPC - Customers</title>
			<short-title>Sample ICEfaces IPC - Customers</short-title>
			<keywords>Sample ICEfaces IPC - Customers</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>sample_icefaces_ipc_bookings_portlet</portlet-name>
		<display-name>Sample ICEfaces IPC - Bookings</display-name>
		<portlet-class>com.icesoft.faces.webapp.http.portlet.MainPortlet</portlet-class>
		<init-param>
			<name>com.icesoft.faces.VIEW</name>
			<value>/xhtml/bookingList.iface</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Sample ICEfaces IPC - Bookings</title>
			<short-title>Sample ICEfaces IPC - Bookings</short-title>
			<keywords>Sample ICEfaces IPC - Bookings</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>