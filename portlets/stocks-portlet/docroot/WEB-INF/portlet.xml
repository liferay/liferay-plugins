<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	<portlet>
		<portlet-name>1</portlet-name>
		<display-name>Stocks</display-name>
		<portlet-class>com.liferay.stocks.portlet.StocksPortlet</portlet-class>
		<init-param>
			<name>edit-template</name>
			<value>/edit.jsp</value>
		</init-param>
		<init-param>
			<name>edit-guest-template</name>
			<value>/edit.jsp</value>
		</init-param>
		<init-param>
			<name>view-template</name>
			<value>/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>edit_guest</portlet-mode>
		</supports>
		<portlet-info>
			<title>Stocks</title>
			<short-title>Stocks</short-title>
			<keywords>Stocks</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>symbols</name>
				<value>MOT</value>
				<value>NOK</value>
				<value>SBUX</value>
				<value>YHOO</value>
			</preference>
			<preference>
				<name>fahrenheit</name>
				<value>true</value>
			</preference>
			<preferences-validator>com.liferay.stocks.portlet.StocksPreferencesValidator</preferences-validator>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>