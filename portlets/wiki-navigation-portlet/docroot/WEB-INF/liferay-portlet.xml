<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>1</portlet-name>
		<icon>/icons/tree_menu.png</icon>
		<configuration-action-class>com.liferay.wikinavigation.treemenu.action.ConfigurationActionImpl</configuration-action-class>
		<instanceable>true</instanceable>
		<scopeable>true</scopeable>
		<css-class-wrapper>wiki-navigation-portlet-tree-menu</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>2</portlet-name>
		<icon>/icons/page_menu.png</icon>
		<configuration-action-class>com.liferay.wikinavigation.pagemenu.action.ConfigurationActionImpl</configuration-action-class>
		<instanceable>true</instanceable>
		<scopeable>true</scopeable>
		<header-portlet-css>/page_menu/css/main.css</header-portlet-css>
		<css-class-wrapper>wiki-navigation-portlet-page-menu</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>