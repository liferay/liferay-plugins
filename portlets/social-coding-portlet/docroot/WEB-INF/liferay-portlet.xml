<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>1</portlet-name>
		<icon>/icons/svn.png</icon>
		<scheduler-entry>
			<scheduler-event-listener-class>com.liferay.socialcoding.svn.messaging.SynchronizeSVNMessageListener</scheduler-event-listener-class>
			<trigger>
				<simple>
					<property-key>svn.synchronization.interval</property-key>
					<time-unit>minute</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>svn</friendly-url-mapping>
		<friendly-url-routes>com/liferay/socialcoding/svn/portlet/svn-friendly-url-routes.xml</friendly-url-routes>
		<social-activity-interpreter-class>com.liferay.socialcoding.svn.social.SVNActivityInterpreter</social-activity-interpreter-class>
		<header-portlet-css>/svn/css/main.css</header-portlet-css>
		<css-class-wrapper>social-coding-portlet-svn</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>2</portlet-name>
		<icon>/icons/jira.png</icon>
		<scheduler-entry>
			<scheduler-event-listener-class>com.liferay.socialcoding.jira.messaging.SynchronizeJIRAMessageListener</scheduler-event-listener-class>
			<trigger>
				<simple>
					<property-key>jira.synchronization.interval</property-key>
					<time-unit>minute</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<social-activity-interpreter-class>com.liferay.socialcoding.jira.social.JIRAActivityInterpreter</social-activity-interpreter-class>
		<header-portlet-css>/jira/css/main.css</header-portlet-css>
		<css-class-wrapper>social-coding-portlet-jira</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>