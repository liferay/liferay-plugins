<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>auto-shortener</portlet-name>
		<display-name>Automatic Shortener</display-name>
		<portlet-class>com.liferay.linkshortener.portlet.AutoShortenerPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/autoshorten/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Auto Shortener</title>
			<short-title>Auto Shortener</short-title>
			<keywords>Auto Shortener</keywords>
		</portlet-info>
	</portlet>
</portlet-app>