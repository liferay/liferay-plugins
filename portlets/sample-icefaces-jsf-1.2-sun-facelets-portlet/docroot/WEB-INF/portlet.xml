<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>1</portlet-name>
		<display-name>Sample ICEfaces JSF 1.2 Sun Facelets</display-name>
		<portlet-class>com.icesoft.faces.webapp.http.portlet.MainPortlet</portlet-class>
		<init-param>
			<name>com.icesoft.faces.EDIT</name>
			<value>/Edit.iface</value>
		</init-param>
		<init-param>
			<name>com.icesoft.faces.HELP</name>
			<value>/Help.iface</value>
		</init-param>
		<init-param>
			<name>com.icesoft.faces.VIEW</name>
			<value>/JobApplication.iface</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
		<portlet-info>
			<title>Sample ICEfaces JSF 1.2 Sun Facelets</title>
			<short-title>Sample ICEfaces JSF 1.2 Sun Facelets</short-title>
			<keywords>Sample ICEfaces JSF 1.2 Sun Facelets</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>dateFormat</name>
				<value>MM/dd/yyyy</value>
			</preference>
			<preference>
				<name>recipientEmailAddress</name>
				<value>humanresources@some-company-domain.com</value>
			</preference>
			<preference>
				<name>unitedStatesPhoneFormat</name>
				<value>###-###-####</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>